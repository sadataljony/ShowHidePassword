<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    android:gravity="center">

    <!-- use implementation 'com.android.support:design:28.0.0' dependency for android.support.design.widget.TextInputLayout and android.support.design.widget.TextInputEditText -->
    <!-- use implementation 'com.google.android.material:material:1.0.0' dependency for  com.google.android.material.textfield.TextInputLayout and com.google.android.material.textfield.TextInputEditText -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:passwordToggleEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Click Eye Icon to Show/Hide Password"
            android:text="Show/HidePassword"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>